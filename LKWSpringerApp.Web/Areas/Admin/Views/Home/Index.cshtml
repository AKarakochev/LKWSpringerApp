@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Admin Dashboard</h1>

<div class="container">
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header bg-primary text-white">
                    <h4>User Management</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Manage system users and their roles.</p>
                    <a href="~/Admin/UserManagement" class="btn btn-primary">Go to User Management</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header bg-secondary text-white">
                    <h4>System Settings</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Configure key system settings.</p>
                    <a href="~/Admin/Settings" class="btn btn-secondary">Go to Settings</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header bg-success text-white">
                    <h4>Reports</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">View and export system reports.</p>
                    <a href="~/Admin/Reports" class="btn btn-success">Go to Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>