@model IEnumerable<LKWSpringerApp.Web.ViewModels.Client.ClientViewModel>

@{
    ViewData["Title"] = "Clients";
}

<h2><u>All Clients</u></h2>

<div class="mb-3 text-end">
    <a asp-action="Add" class="btn btn-success">Add New Client</a>
</div>

<div class="containercontainer-fluid">
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Client Number</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Delivery Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.ClientNumber</td>
                    <td>@client.Address</td>
                    <td>@client.PhoneNumber</td>
                    <td>@client.DeliveryTime</td>
                    <td>
                        <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
                            <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-primary btn-sm">View Details</a>
                        </div>
                   </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/js/bootstrap.bundle.min.js"></script>
}
