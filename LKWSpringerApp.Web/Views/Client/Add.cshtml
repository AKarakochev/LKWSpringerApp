@model LKWSpringerApp.Web.ViewModels.Client.AddClientModel

@{
    ViewData["Title"] = "Add Client";
}

<h2><u>Add client</u></h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(false)
    </div>
}

<form asp-action="Add" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Client Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClientNumber" class="control-label">Client Number</label>
        <input asp-for="ClientNumber" class="form-control" />
        <span asp-validation-for="ClientNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddressUrl" class="control-label">Google Maps URL</label>
        <input asp-for="AddressUrl" class="form-control" placeholder="Paste Google Maps URL here" />
        <span asp-validation-for="AddressUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="example: 0049... or +49... or 0162..." pattern="^\+?\d{10,15}$" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeliveryDescription" class="control-label">Delivery Description</label>
        <textarea asp-for="DeliveryDescription" class="form-control"></textarea>
        <span asp-validation-for="DeliveryDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeliveryTime" class="control-label">Delivery Time</label>
        <input asp-for="DeliveryTime" class="form-control" placeholder="Format: HH:MM - HH:MM" pattern="^\d{2}:\d{2} - \d{2}:\d{2}$ />
        <span asp-validation-for="DeliveryTime" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Add Client</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}