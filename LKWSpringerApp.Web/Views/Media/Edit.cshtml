@model LKWSpringerApp.Web.ViewModels.Media.EditMediaModel

<h2><u>Edit client media file</u></h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(false)
    </div>
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ClientId" />

    <div class="form-group">
        <label>Current Image</label>
        <div>
            <img src="/@Model.ImageUrl" alt="Current Image" style="max-width: 150px;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NewImageFile">Upload New Image (Optional)</label>
        <input asp-for="NewImageFile" class="form-control" type="file" />
        <span asp-validation-for="NewImageFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewVideoFile">Upload Video</label>
        <input asp-for="NewVideoFile" type="file" class="form-control" />
        <span asp-validation-for="NewVideoFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </div>
</form>