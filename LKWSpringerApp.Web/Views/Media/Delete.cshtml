@model LKWSpringerApp.Web.ViewModels.Media.DeleteMediaModel

<h2><u>Delete client media file</u></h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>Are you sure you want to delete this media?</p>
<div>
    <strong>Image URL:</strong> @Model.ImageUrl
</div>
<div>
    <strong>Description:</strong> @Model.Description
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-controller="Client" asp-route-id="@Model.ClientId" class="btn btn-secondary">Cancel</a>
</form>
