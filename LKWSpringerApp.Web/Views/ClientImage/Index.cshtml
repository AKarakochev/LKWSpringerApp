@model IEnumerable<LKWSpringerApp.Web.ViewModels.ClientImage.AllClientImageModel>

@{
    ViewData["Title"] = "Client Images";
}

<h2><u>All Media Files</u></h2>

<div class="mb-3 text-end">
    <a asp-action="Add" class="btn btn-success">Add client media file</a>
</div>

<!-- Responsive Table -->
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Client Name</th>
                <th>Image</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var image in Model)
            {
                <tr>
                    <td>@image.ClientName</td>
                    <td>
                        <img src="/@image.ImageUrl" alt="@image.Description" class="img-fluid rounded" style="max-width: 100px;" />
                    </td>
                    <td>@image.Description</td>
                    <td>
                        <div class="d-flex justify-content-center align-items-center gap-2" style="height: 100%;"> 
                            <a asp-action="Edit" asp-route-id="@image.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@image.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/js/bootstrap.bundle.min.js"></script>
}