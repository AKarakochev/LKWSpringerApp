@model LKWSpringerApp.Web.ViewModels.ClientImage.DeleteClientImageModel

<h2>Delete Client Media</h2>
<p>Are you sure you want to delete this media?</p>
<div>
    <strong>Image URL:</strong> @Model.ImageUrl
</div>
<div>
    <strong>Description:</strong> @Model.Description
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-controller="Client" asp-route-id="@Model.ClientId" class="btn btn-secondary">Cancel</a>
</form>
