@model LKWSpringerApp.Web.ViewModels.PinBoard.PinBoardDetailsModel

<h2>Driver Pin Board Details</h2>

<p><strong>Driver ID:</strong> @Model.DriverId</p>
<p><strong>Driving License Expiration Date:</strong> @Model.DrivingLicenseExpDate</p>
<p><strong>Driving Card Expiration Date:</strong> @Model.DrivingCardExpDate</p>
<p><strong>Upcoming Course:</strong> @Model.UpcomingCourse</p>
<p><strong>Upcoming Course Date:</strong> @Model.UpcomingCourseDate</p>
<p><strong>News:</strong> @Model.News</p>
<p><strong>Important News:</strong> @Model.ImportantNews</p>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.DriverId" class="btn btn-primary">Edit</a>
    }
</div>