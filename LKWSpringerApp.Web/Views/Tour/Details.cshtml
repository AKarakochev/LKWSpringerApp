@using LKWSpringerApp.Web.ViewModels.TourModels
@model TourDetailsModel

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>Tour Details</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
    <div class="col-md-8">
        <div class="card-body">
            <h3 class="card-title">@Model.TourName</h3>
            <hr />
            <table class="table">
                <tbody>
                    <tr>
                        <th>Tour Number:</th>
                        <td>@Model.TourNumber</td>
                    </tr>
                </tbody>
            </table>

            <h4>Drivers</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Second Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var driver in Model.Drivers)
                    {
                        <tr>
                            <td>@driver.FirstName</td>
                            <td>@driver.SecondName</td>
                        </tr>
                    }
                </tbody>
            </table>

            <h4>Clients</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Client Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model.Clients)
                    {
                        <tr>
                            <td>@client.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">Back</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success d-flex justify-content-center align-items-center flex-fill mx-1">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this tour?');">Delete</a>
            </div>
        </div>
    </div>
</div>