@using LKWSpringerApp.Web.ViewModels.Driver
@model DetailsDriverModel

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2><u>Driver details</u></h2>
</div>

<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
    <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title">@Model.FirstName @Model.SecondName</h5>
            <hr />
            <p class="card-text"><strong>Birth Date:</strong> @Model.BirthDate</p>
            <p class="card-text"><strong>Start Date:</strong> @Model.StartDate</p>
            <p class="card-text"><strong>Phone Number:</strong> @Model.PhoneNumber</p>
            <p class="card-text"><strong>Type:</strong> @(Model.Stammdriver ? "Stammdriver" : Model.Springerdriver ? "Springerdriver" : "Not Specified")</p>
            <hr />
            <h6 class="card-subtitle mb-2 text-muted">Tours</h6>
            <ul>
                @foreach (var tour in Model.Tours)
                {
                    <li>@tour</li>
                }
            </ul>
            <hr />
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">Back</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success d-flex justify-content-center align-items-center flex-fill mx-1">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this driver?');">Delete</a>
            </div>
        </div>
    </div>
</div>
