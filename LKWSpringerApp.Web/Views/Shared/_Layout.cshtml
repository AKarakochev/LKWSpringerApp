<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - LKWSpringerApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/LKWSpringerApp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        @Html.Partial("_NavigationBar")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="footer-nav d-flex justify-content-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mx-1">Home</a>
            <a asp-controller="PinBoard" asp-action="Index" class="btn btn-primary mx-1">Pin Board</a>
            <a asp-controller="Driver" asp-action="Index" class="btn btn-primary mx-1">Drivers</a>
            <a asp-controller="Tour" asp-action="Index" class="btn btn-primary mx-1">Tours</a>
            <a asp-controller="Client" asp-action="Index" class="btn btn-primary mx-1">Clients</a>
            <a asp-controller="Media" asp-action="Index" class="btn btn-primary mx-1">Media</a>
        </div>
    <div class="container">&copy; 2024 - LKWSpringerApp - <a asp-controller="Home" asp-action="Privacy">Privacy</a></div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>