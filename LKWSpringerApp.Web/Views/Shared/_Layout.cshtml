<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - LKWSpringerApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/LKWSpringerApp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">LKWSpringerApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Driver" asp-action="Index">Drivers</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Tour" asp-action="Index">Tours</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Client" asp-action="Index">Clients</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="ClientImage" asp-action="Index">Media Files</a></li>
                    </ul>
                    <div class="d-flex ms-auto align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="me-3">Hello, @User.Identity.Name!</span>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                <button class="btn btn-danger btn-sm">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            <a class="btn btn-secondary btn-sm" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">&copy; 2024 - LKWSpringerApp - <a asp-controller="Home" asp-action="Privacy">Privacy</a></div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>